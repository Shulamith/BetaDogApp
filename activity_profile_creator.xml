<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.girlswhocode.pawpals.ProfileCreatorActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/svDog" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add your dog's information"
                android:id="@+id/tvDogProfile"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="25sp"
                android:height="50dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/etDogNameHolder"
                android:hint="Name"
                android:textSize="23sp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="Breed"
                android:id="@+id/tvBreed"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />

            <Spinner
                android:id="@+id/spinBreed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="Gender"
                android:id="@+id/tvDogGender"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />

            <Spinner
                android:id="@+id/spinGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="Size"
                android:id="@+id/tvDogSize"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />

            <Spinner
                android:id="@+id/spinSize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="Spayed/Neutered"
                android:id="@+id/tvSpNeut"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal" />

            <Spinner
                android:id="@+id/spinSpNeut"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/bProfileNext" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
